<h2>Search Results:</h2>

    <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="<%= results.image_uri %>">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= results['file-name'].replace(/_/g, " ").toUpperCase() %></span>
          <p><a class="waves-effect waves-light btn"><i class="material-icons right" id="add">check_circle</i>Add to Inventory</a></p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= results['file-name'].replace(/_/g, " ").toUpperCase() %><i class="material-icons right">close</i></span>
          <h5><%= results.price%> bells</h5>
          <h5>When you caught it you said,<br>"<%= results['catch-phrase'] %>"</h5>
          <h5>When you donate it, Blathers says:<br>"<%= results['museum-phrase'] %>"</h5>
        </div>
      </div>


    <form method="POST" action="/inventory">
        <input type="hidden" class="addCritter" name="id" value="<%= results.id%>">
    </form>
