<h3>Welcome to your inventory, <%= user.name %></h3>
<h4>You've already got:</h4>
</br>
</br>

<% if (user) { %>
    <% critters.forEach(critter => { %>
        <% belongTos.forEach(belongto => { %>
            <% if (belongto.critterId === critter.id) { %>
                <!-- <img src="" alt=""> -->
                <a href="detail?q=<%= critter.name %>"><h5> <%= critter.name.replace(/_/g, " ").toUpperCase() %> </h5></a>
                <% if (belongto.nickname) { %>
                <h5> "<%= belongto.nickname %>" </h5>
                <% } %>
                <!-- <a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">eject</i></a> -->
                <form method="POST" action="/inventory/<%= critter.id %>?_method=DELETE">
                    <button type="submit">Remove</button>
                </form>
                <% if (belongto.nickname) { %>
                <form method="POST" action="/inventory/<%= critter.id %>?_method=PUT">
                    <input type="text" placeholder="New nickname" name="nickname" id="nickname">
                    <button type="submit">Change nickname</button>
                </form>
                <% } else { %>
                    <form method="POST" action="/inventory/<%= critter.id %>?_method=PUT">
                        <input type="text" placeholder="Add nickname" name="nickname" id="nickname">
                        <button type="submit">Give nickname</button>
                    </form>
                <% } %>
                
                <!-- <a class="btn-floating btn-large waves-effect waves-light green"><i class="material-icons">edit</i></a> -->
                </br>
                </br>
            <% } %>
        <% }) %>
    <% }); %>
<% }; %>